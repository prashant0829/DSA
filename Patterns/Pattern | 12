void numberCrown(int n)
{
    // Write your code here.
    for (int i = 1; i <= n; i++)
    {
        for (int j = 1; j <= i; j++)
        {
            std::cout << j << " ";
        }
        for (int j = n - i + 2; j >= i; j--)
        {
            std::cout << "  ";
        }
        for (int j = i; j >= 1; j--)
        {
            std::cout << j << " ";
        }
        std::cout << endl;
    }
}