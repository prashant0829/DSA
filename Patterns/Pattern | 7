void nStarTriangle(int n)
{
    // Write your code here.
    for (int i = 1; i <= n; i++)
    {
        for (int j = n - 1; j >= i; j--)
        {
            std::cout << " ";
        }
        for (int j = 1; j <= i * 2 - 1; j++)
        {
            std::cout << "*";
        }
        std::cout << endl;
    }
}
