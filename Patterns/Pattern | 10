void nStarTriangle(int n)
{
    // Write your code here.
    for (int i = 1; i < n; i++)
    {
        for (int j = 1; j <= i; j++)
        {
            std::cout << "*";
        }
        std::cout << endl;
    }
    for (int j = 1; j <= n; j++)
    {
        std::cout << "*";
    }
    std::cout << endl;
    for (int i = n - 1; i >= 1; i--)
    {
        for (int j = i; j >= 1; j--)
        {
            std::cout << "*";
        }
        std::cout << endl;
    }
    std::cout << endl;
}